<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/productImageView"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="4dp" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/productIV"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_gravity="center_horizontal" />

                    <ImageView
                        android:id="@+id/inWishListIV"
                        android:background="@drawable/in_wish_list"
                        android:layout_width="match_parent"
                        android:layout_height="3dp" />

                    <ImageView
                        android:id="@+id/priceBackgroundIV"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="-1dp"
                        android:background="@drawable/price_background" />

                    <TextView
                        android:id="@+id/productPriceTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7sp"
                        android:layout_marginLeft="7sp"
                        android:layout_marginTop="14sp"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/White"
                        android:rotation="-45" />

                </FrameLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/productNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="38sp"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginRight="20sp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/MyBlue"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/productDescTV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:layout_gravity="center_horizontal"
            android:textSize="17sp"
            android:ellipsize="end"
            android:maxLines="9" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:id="@+id/buyBT"
    android:src="@drawable/buy_button"
    app:backgroundTint="@color/MyBlueDark"
    app:layout_anchor="@id/productImageView"
    app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>

